rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }

    // Users can read their own profile.
    // Admins can read any profile and list all users.
    match /users/{userId} {
      allow get: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      allow list: if request.auth != null && isAdmin(request.auth.uid);
      allow write: if request.auth != null && request.auth.uid == userId;
      // Admin write access is handled through backend functions for safety.
    }

    // Reports can be created by any authenticated user.
    // Reports can only be read by their creator or an admin.
    // Reports can only be updated/deleted by their creator or an admin.
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null; // Simplified for search, detailed checks in code/future rules
      allow update, delete: if request.auth != null && (resource.data.reporterId == request.auth.uid || isAdmin(request.auth.uid));
    }

    // Search logs can only be created and read by the user who owns them.
    match /searchLogs/{logId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Audit logs can only be created and read by admins.
    match /auditLogs/{logId} {
      allow read, create: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Notifications can be created by the system (via admin/backend function).
    // Users can only read and update their own notifications.
    match /notifications/{notificationId} {
      allow create: if request.auth != null && isAdmin(request.auth.uid); // System/admin creates notifications
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
